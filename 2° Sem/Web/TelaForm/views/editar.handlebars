<header div="">
        <nav class="navbar navbar-expand-lg bg-primary">
            <div class="container-xl ">
                <a class="navbar-brand text-white" href="#">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active text-white" aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/consulta">Consulta</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main class="container-xl p-3 d-flex flex-column gap-2">
        <div>
            <h5>Atualizar Dados - Agendamento de Potenciais Clientes</h5>
            <small>Sistema utilizado para agendamentos de serviços</small>
        </div>
        <form action="/atualizar" method="POST">
        {{#each post}}
            {{#dataValues}}
            <div class="mb-3">
                <label for="id" class="form-label">ID</label>
                <input type="text" class="form-control" name="idAgendamento" id="id" value="{{id}}" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Nome</label>
                <input type="text" class="form-control" name="nome" id="name" value="{{{nome}}}" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
                <label for="telefone" class="form-label">Telefone</label>
                <input type="number" class="form-control" name="telefone"  id="telefone" value="{{{telefone}}}">
            </div>
            <div class="mb-3">
                <label for="origem" class="form-label">Origem</label>
                <select name="origem" id="origem" class="form-select" aria-label="Default select example" slot="1">
                    <option value="1">Celular</option>
                    <option value="2">Telefone</option>
                    <script>
                        let select = document.getElementById("origem")
                        let options = select.children
                        for (let i = 0; i < options.length; i++){
                            console.log(options[i].getAttribute("value"))
                            if (options[i].getAttribute("value") == {{{origem}}}){
                                options[i].setAttribute("selected","")
                            }
                        }
                    </script>
                </select>
            </div>
            <div class="mb-3">
                <label for="data" class="form-label">Data de Contato</label>
                <input type="date" name="data" class="form-control" id="data" value="{{{data}}}">
            </div>
            <div class="mb-3">
                <label for="observacao" class="form-label">Observação</label>
                <textarea name="observacao" id="observacao" cols="30" class="form-control" >{{{observacao}}}</textarea>
            </div>
            
            <button type="submit" class="btn btn-primary">Atualizar</button>
            {{/dataValues}}
        {{/each}}
        </form>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    